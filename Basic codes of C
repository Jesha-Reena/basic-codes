*Code1(print HELLO without semicolon)

#include<stdio.h>
int main()
{
   if(printf("HELLO"))
     {
      
      }
}


Alter:
#include<stdio.h>
#define x printf("HELLO")
int main()
{
   x;
}

Output:  
       HELLO

**Code2(even or odd using ternary operator)

#include<stdio.h>
int main()
{
   int n; 
   scanf("%d",&n); 
   (n%2==0)?printf("Even"):printf("Odd");
}

Alter:
(n&1==0)?printf("Even"):printf("Odd");

Output:  
       10
       Even

***Code3(leap year or not)

#include<stdio.h>
int main()
{
   int a; 
   scanf("%d",&a); 
   if(a%4==0&&a%100!=0||a%400==0)
     {
      printf("leap year");
     }
   else
       printf("not");
}

Output:
       2020
       leap year


****Code4(finding max of given nos)
#include<stdio.h>
#define max(a,b) (a>b)?(a):(b) 
int main()
{
  int A=max(max(5,8),10);
  printf("%d",A); 
}
Output:
       10

******Code5(print from 0 to 1000 in one line)

#include<stdio.h>
int main()
{
  for(int i=0;i<=1000;printf("%d ",i++));
}

Output:
0 1 2 3 4 ........... 998 999 1000


*Code6(Print product of two numbers without using *)
 
#include<stdio.h>
int main()
{
   int n,sum=0; 
   scanf("%d %d",&n1,&n2); 
   for(int i=1;i<=n1; i++)
   sum=sum+n2;
   printf("%d",sum); 
}
Output:
5 3
40

**Code7(Fibonacci series)

#include<stdio.h>
int main()
{
   int first = -1 , second = 1, print,limit;
 scanf("%d",&limit);
 while(limit)
 {
 print = first + second;
 printf("%d ",print);
 first = second;
 second = print;
 limit--;
 }
}
Output:
5
0 1 1 2 3

***Code8(power of a number without using pow function)

#include<stdio.h>
int main()
{
   int n, p, rem=1;
 scanf("%d %d",&n,&p);
 for(int i=1;i<=p; i++)
 { 
   rem=n*rem;
 }
 printf("%d",rem); 
}
Output:
  2 3
  8




